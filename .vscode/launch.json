    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Server",
            "program": "${workspaceFolder}/keystone.js",
            "console": "internalConsole",
            // this is needed to output also logs that write directly to process.stdout/process.stderr
            "outputCapture": "std"
        },
        {
          "type": "node",
          "request": "launch",
          "name": "File",
          "program": "${file}",
          "console": "internalConsole",
          // this is needed to output also logs that write directly to process.stdout/process.stderr
          "outputCapture": "std"
      }
    ]
}
