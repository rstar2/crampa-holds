<div class="container-fluid">
	<div class="row my-4">
		<div class="col-8 d-none d-md-block">
			<app-slideshow :images="{{toJSON gallery.images}}" :thumbs="true"></app-slideshow>
		</div>
		<div class="col">
			<div class="products">
				{{#each products.results}}
					<button class="btn btn-primary d-block my-3"><a href="{{productUrl slug}}">{{{title}}}</a></button>
				{{/each}}
			</div>
		</div>
		
	</div>

	{{!-- TODO: Fix shop pagination --}}
	{{!-- {{>pagination}} --}}
</div>

