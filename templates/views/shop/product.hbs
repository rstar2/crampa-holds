<div class="container">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
			<article>
				<p><a href="{{shopUrl}}">&larr; back to Shop</a></p>
				<hr>
				<header>
					<h1>{{product.title}}</h1>
				</header>
				<div class="product">
					{{#if page.image}}<img src="{{{cloudinaryUrl page.image width=750 height=450 crop='fit' }}}" class="img-responsive">{{/if}}
					{{{product.description.full.html}}}
				</div>

				<div class="product-price">
					Price is {{{product.price}}}
				</div>
				<a href="/shop/cart?action=product.add&id={{product.id}}">Add to cart</a>
			</article>
		</div>
	</div>
</div>



