<div class="mb-4 comment-form-wrap">
	<form method="post comment-form">
		<input type="hidden" name="action" value="comment.create">

		<div class="media">
			<img class="avatar mr-3" src="http://placehold.it/80x80" alt="">
			<div class="media-body">
				{{#if user }}
				<textarea class="form-control" name="content" placeholder="Leave a comment..." style="margin-bottom: 10px; min-height: 80px; resize: vertical;"></textarea>
				<button class="btn btn-primary" type="submit">Comment</button>
				{{else}}
				<textarea class="form-control" name="content" placeholder="Please sign in to comment" disabled="disabled" style="margin-bottom: 10px; min-height: 80px; resize: vertical;"></textarea>
				<a class="btn btn-sm btn-primary" role="button" href="/keystone/signin">Sign in to Comment</a>
				{{/if}}
			</div>
		</div>

	</form>
</div>
